<Window x:Class="Shapes.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Демонстрация Shapes" Height="332" Width="163">
    
    <StackPanel>

        <Button Padding="3" 
                FontSize="16" 
                FontWeight="Bold">
            <StackPanel Orientation="Horizontal">
                <Rectangle Height="30" 
                           Width="30" 
                           Fill="Black"/>
                <TextBlock Text="Stop" 
                           VerticalAlignment="Center" 
                           Margin="5" />
            </StackPanel>
        </Button>
        
        <Button Padding="3">
            <StackPanel Orientation="Horizontal">
                <Polygon Points="0,0,30,15,0,30" 
                         Fill="Red" 
                         Stroke="Black"/>
                <TextBlock Text="Play" 
                           VerticalAlignment="Center"
                           Margin="5"
                           FontSize="16"
                           FontWeight="Bold"/>
            </StackPanel>
        </Button>

        <Ellipse Height="{Binding RelativeSource={RelativeSource Self}, Path=ActualWidth}" 
                 Fill="Orange" 
                 Margin="3"
                 MouseDown="Ellipse_MouseDown"/>

    </StackPanel>
</Window>
