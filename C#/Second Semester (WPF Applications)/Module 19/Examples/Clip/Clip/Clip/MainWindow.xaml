<Window x:Class="Clip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Демонстрация Clip" Height="350" Width="525">
    <Grid>
        
        <Button Background="Black" Height="100" Width="80"
                Margin="5" Foreground="White"> Это кнопка
            
            <Button.Clip>
                <CombinedGeometry GeometryCombineMode="Exclude"> 
                <CombinedGeometry.Geometry1>
                    <EllipseGeometry RadiusX="50" RadiusY="50" Center="50, 50"/>
                </CombinedGeometry.Geometry1>
                <CombinedGeometry.Geometry2>
                    <EllipseGeometry RadiusX="50" RadiusY="50" Center="100,50"/>
                </CombinedGeometry.Geometry2>
                </CombinedGeometry>
            </Button.Clip>
            
        </Button>
    </Grid>
</Window>
