<Window x:Class="Transformations.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Демонстрация трансформаций" Height="574" Width="338">
    
    <StackPanel>

        <Button Height="50" Width="200" Content="Кнопка"/>
        <Button Height="50" Width="200" Content="Кнопка"/>

        <!-- RenderTransform -->
        <Button Height="50" Width="200" Content="Кнопка">
            <Button.RenderTransform>
                <TransformGroup>
                    <RotateTransform CenterX="100" CenterY="25" Angle="45"/>
                    <SkewTransform AngleX="45" AngleY="0" CenterX="100" CenterY="25"/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
        
        <Button Height="50" Width="200" Content="Кнопка"/>
        <Button Height="50" Width="200" Content="Кнопка"/>

        <!-- LayoutTransform -->
        <Button Height="50" Width="200" Content="Кнопка">
            <Button.LayoutTransform>
                    <RotateTransform CenterX="100" CenterY="25" Angle="45"/>
            </Button.LayoutTransform>
        </Button>

        <Button Height="50" Width="200" Content="Кнопка"/>
        <Button Height="50" Width="200" Content="Кнопка"/>
        
    </StackPanel>
</Window>
