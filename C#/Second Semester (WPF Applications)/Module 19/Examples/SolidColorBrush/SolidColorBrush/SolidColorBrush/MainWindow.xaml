<Window x:Class="SolidColorBrush.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Демонстрация SolidColorBrush" Height="350" Width="286">
    <StackPanel>

        <Button Background="Aqua"
                Height="30"
                Margin="1"
                Content="Это предопределенный SolidColorBrush"/>

        <Button Foreground="#FDF4A5A3"
                Height="30"
                Margin="1"
                Content="Это SolidColorBrush">
            <Button.Background>
                <SolidColorBrush>
                    <SolidColorBrush.Color>
                        <Color  A="255" R="0" G="0" B="255"/>
                    </SolidColorBrush.Color>
                </SolidColorBrush>
            </Button.Background>
        </Button>
        
        <Ellipse Fill="Aquamarine"
                 Stroke="Orange"
                 Height="30"
                 Margin="1"/>

    </StackPanel>
</Window>
